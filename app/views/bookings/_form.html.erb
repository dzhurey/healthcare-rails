<%= form_with(url: booking_create_path, method: "post") do %>
  <div class="row">
    <div class="col-6">
      <div class="row">
        <div class="form-group col-12">
          <%= label_tag(:date, "Date") %>
          <input type="text" class="form-control" name="booking[date]">
          <small class="form-text text-muted"><%= instance_variable_defined?("@errors") ? @errors[:date].join(', ') : '' %></small>
        </div>
        <div class="form-group col-12">
          <input type="hidden" class="form-control" name="booking[schedule_line_id]" value="<%= @schedule_line.id %>">
        </div>
      </div>
    </div>
  </div>

  <%= submit_tag("Submit", class: 'btn btn-primary') %>
<% end %>