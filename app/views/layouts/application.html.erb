<!DOCTYPE html>
<html>
  <head>
    <title>HealthcareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex" id="wrapper">

      <!-- Sidebar -->
      <div class="bg-light border-right" id="sidebar-wrapper">
        <div class="sidebar-heading">Healthcare </div>
        <div class="list-group list-group-flush">
          <%= link_to "Doctors", doctors_path, class: "list-group-item list-group-item-action bg-light" %>
          <%= link_to "Hospitals", hospitals_path, class: "list-group-item list-group-item-action bg-light" %>
          <%= link_to "Sign Out", destroy_user_session_path, class: "list-group-item list-group-item-action bg-light", method: :delete %>
        </div>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        </nav>

        <div class="container-fluid main">
          <%= yield %>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
  </body>
</html>
